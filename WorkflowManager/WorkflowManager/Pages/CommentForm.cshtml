@page
@model WorkflowManager.Pages.CommentFormModel
@{}

<script>
    function sendComment() {
        var id = document.getElementById("Id").value;
        var comment = document.getElementById("Comment").value;

        $.get('/api/comment?id=' + id + '&reason=' + comment,
            function (result) {
                $(".message").show();
                document.getElementById("message").innerHTML = result;
            }
        );
    }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>

<h1>Comment Form</h1>
<hr />
<div style="margin-left: 30%">
    <input type="text" id="Id" placeholder="ID" style="width: 50%; padding: 12px 20px; margin: 8px 0px; display: inline-block; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;" /><br /><br />
    <textarea id="Comment" placeholder="Reason for Rejection" rows="4" cols="50" style="width: 50%; padding: 12px 20px; margin: 8px 0px; display: inline-block; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;"></textarea><br /><br />
    <button onclick="sendComment()" style="width: 50%; background-color: #4CAF50; color: white; padding: 14px 20px; margin: 8px 0px; border: none; border-radius: 4px; cursor: pointer;">Send</button>
</div>
<div id="message" class="message" style="display: none; width: 80%; font-weight: 800; border: dashed; margin-left: 10%; padding: 20px; margin-top: 50px; font-size: 24px;">
</div>